# Redirects for Cloudflare Pages

# Ensure API functions are never rewritten
/api/* /api/:splat 200

# Favicon mapping
/favicon.ico /getkkul-logo-fabicon.png 200

# Admin redirects
/admin /admin-dashboard 301
/admin/* /admin-dashboard/:splat 301
# Localized admin dashboard vanity path
/:locale/admin-dashboard /:locale/account/admin 302
/:locale/admin-dashboard/* /:locale/account/admin/:splat 302

# Authentication redirects
/login /auth/signin 301
/register /auth/register 301
/signup /auth/register 301

# Legacy routes (if any)
/dashboard /user-dashboard 301
/profile /account 301

# Handle trailing slashes
/admin-dashboard/ /admin-dashboard 301
/user-dashboard/ /user-dashboard 301
/account-dashboard/ /account-dashboard 301
/packer-dashboard/ /packer-dashboard 301
# Admin localized shortcuts
/:locale/admin /:locale/account/admin 302

/delivery-dashboard/ /delivery-dashboard 301

# RSC flight payload for locale root: map /:locale/index.txt -> /:locale.txt (place before any locale wildcards)
/:locale/index.txt /:locale.txt 200
/ko/index.txt /ko.txt 200
/en/index.txt /en.txt 200
/zh/index.txt /zh.txt 200

# 루트 경로 처리
/ /ko 302

# Non-localized to default locale (ko)
/products /ko/products 302
/products/* /ko/products/:splat 302
/categories /ko/categories 302
/categories/* /ko/categories/:splat 302
/offers /ko/offers 302
/offers/* /ko/offers/:splat 302
/favorite /ko/favorite 302
/favorite/* /ko/favorite/:splat 302
/cart /ko/cart 302
/account /ko/account 302
/account/* /ko/account/:splat 302
/mypage /ko/account 302
/auth/* /ko/auth/:splat 302
# Localized mypage vanity path
/:locale/mypage /:locale/account 302
